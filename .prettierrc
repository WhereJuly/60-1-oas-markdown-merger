{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": true,
    "printWidth": 200,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSpacing": true,
    "bracketSameLine": true,
    "trailingComma": "none",
    "tabWidth": 4,
    "overrides": [
        {
            "files": ["*.oas.json"],
            "options": {
                "tabWidth": 2,
                "useTabs": false
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 1
            }
        }
    ]
}
