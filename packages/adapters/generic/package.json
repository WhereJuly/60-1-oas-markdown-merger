{
    "name": "@dcoupld/oas-generic-adapter",
    "version": "0.0.3",
    "description": "The OAS DbC Generic Adapter Package",
    "type": "module",
    "main": "./code/index.js",
    "module": "./code/index.js",
    "types": "./types/index.d.ts",
    "exports": {
        ".": {
            "import": "./code/index.js",
            "types": "./types/index.d.ts"
        },
        "./examples/oas/*.oas.json": "./examples/*.oas.json"
    },
    "scripts": {
        "development:serve": "nodemon --watch ./src --ext ts,json --exec \"npm run check-types && dotenvx run -- tsx ./src/index.ts\" --errors=true",
        "check-types": "npx tsc --noEmit --project .",
        "test:foundation": "npm run check-types && cross-env NODE_ENV=test vitest run --config tests/foundation/.ancillary/config/vitest.config.ts",
        "pre-push": "npm run test:foundation",
        "typedoc:build": "npx typedoc",
        "package:build": "npm run test:foundation && rimraf ./.delivery/.builds/package && tsc -p ./.delivery/configuration/tsconfig.json && npm run package:bundle:copy",
        "package:bundle:copy": "cpy ./package.json ./.delivery/.builds/package && cpy ./tests/foundation/.ancillary/fixtures/definitions/petstore.oas.json ./.delivery/.builds/package/examples --flat",
        "package:publish": "cd ./.delivery/.builds/package && npm publish"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dcoupld/oas.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "keywords": [
        "openapi",
        "typescript",
        "design-by-contract"
    ],
    "author": "valentineshi.dev@gmail.com",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://github.com/dcoupld/oas/issues"
    },
    "homepage": "https://github.com/dcoupld/oas/tree/master/adapters/generic#readme",
    "devDependencies": {
        "@types/lodash.get": "^4.4.9",
        "@vitest/coverage-v8": "^2.1.4",
        "lodash.get": "^4.4.2",
        "nock": "^14.0.0-beta.15",
        "npm": "^10.9.0",
        "typedoc": "^0.26.11"
    },
    "dependencies": {
        "openapi-types": "^12.1.3"
    },
    "peerDependencies": {
        "openapi-types": "^12.1.3"
    }
}
