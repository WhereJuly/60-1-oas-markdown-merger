{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*.ts", "./src/**/*.json", "src/**/*.vue"],
    "exclude": ["**/*.deprecated.ts"],
    "compilerOptions": {
        "composite": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "tsBuildInfoFile": "./.delivery/.builds/temp/.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"],
            "@views/*": ["./src/views/*"]
        },
        "types": ["node", "jsdom"]
    }
}
